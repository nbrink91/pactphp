{
    "name": "mattersight/pact",
    "description": "PACT library for PHP.",
    "type": "library",
    "authors": [
        {
            "name": "Nicholas Brink",
            "email": "nick.brink@mattersight.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-curl": "*",
        "psr/log": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "phpunit/phpunit": "^6.5",
        "symfony/process": "^4.0",
        "symfony/filesystem": "^4.0",
        "symfony/console": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PhpPact\\": "src/PhpPact"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpPact\\": "tests/PhpPact"
        }
    },
    "scripts": {
        "test": [
            "php-cs-fixer fix --config .php_cs",
            "phpunit"
        ]
    }
}
